<div id="newest">
<% @challenges.each do |challenge| %>
	<span>
		<div id="challengebox">
			<p id="challengetitle">
			<%= link_to challenge.title, challenge_path(challenge) %>
			</p>
			<%= challenge.score %>
			
			<p id="challengetag">
				<%= raw challenge.tag_list.map { |t| link_to t, tag_path(t) }.join('     ') %>
			</p>
		</div>
	</span>
<% end %>
