<div id="slogan">The Internet's Finest Compete for Eternal Glory</div>

<div id="container">
<div id="header">

<div id="newbox">
<%= link_to 'Add New Challenge', new_challenge_path %>
</div>

<div id="allbox">
	<%= link_to "All Challenges", challenges_path %>
</div>

<div id='tag_cloud'>
	<% tag_cloud Challenge.tag_counts, %w[s m l] do |tag, css_class| %>
		<%= link_to tag.name, tag_path(tag.name), class: css_class %>
	<% end %>
</div>
